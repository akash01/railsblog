<%= form_for @post ,:html => {:class => "form-horizontal"} do |f| %>
	
	<div class="form-group">
		<%= f.label(:title, :class => "col-sm-2 control-label") %>
		<div class="col-sm-7">
			<%= f.text_field(:title, :class => "form-control", :placeholder => "Title of the Post")%>
		</div>
	</div>

	<div class="form-group">
		<%= f.label(:Post, :class => "col-sm-2 control-label") %>
		<div class="col-sm-10">
			<%= f.text_area(:body, :class => "form-control", :placeholder => "Write your Post")%>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit(:class => "btn btn-primary") %>
		</div>
	</div>
<% end %>


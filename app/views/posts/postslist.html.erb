<% @heading = " Hello " +  session['firstname'] %>
<% @statement = "Your posts are here" %>
<table class="table table-bordered table-striped table-condensed">
	<thead>
		<tr>
			<th>Title</th>
			<th>Author</th>
			<th>Options</th>
		</tr>
	</thead>
	<tbody>
		<% for @post in @posts %>
			<tr>
				<td> <%= @post.title %>	</td>
				<td> <%= @post.author.firstname %></td>
				
				<td>
					<%= link_to "Show",post_path(@post), :class => "btn btn-primary" %>
					<%= link_to "Edit", edit_post_path(@post), :class => "btn btn-primary" %>
					<%= link_to "Delete", @post, :method => 'delete', data: { confirm: "Are you sure you want to delete " + @post.title + "?" },:class => "btn btn-danger" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
